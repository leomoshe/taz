    "version": "0.2.0",
    "configurations": [
        {
            "name": "taz webapp",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:4200",
            "sourceMaps": true,
            "webRoot": "${workspaceFolder}/webapp",
            "sourceMapPathOverrides": {  
                "webpack:///./*": "${workspaceRoot}/*"  
            }
        },
        {
            "name": "taz server",
            "program": "${workspaceFolder}/server/server.js",
            "request": "launch",
            "type": "node",
            "cwd": "${workspaceFolder}/server"
        }
    ]
}